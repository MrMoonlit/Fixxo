@model CollectionItemModel

<div class="item">
    <div class="image-section">
        <img src="~/images/blackCoat.png" alt="a simple black coat, looks cheap..." />
        <div class="menu">
            <div class="icons">
                <button class="link"><i class="fa-regular fa-code-compare"></i></button>
                <button class="link"><i class="fa-regular fa-heart"></i></button>
                <button class="link"><i class="fa-regular fa-bag-shopping"></i></button>
            </div>
            <a class="btn-theme" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">QUICK VIEW</a>
        </div>
    </div>
    <div class="body-section">
        <div class="category">@Model?.Category</div>
        <div class="name">@Model?.Title</div>
        <partial name="~/Views/Partials/_StarRatingPartial.cshtml" model="Model?.StarRating" />
        <div class="price">$@Model?.Price</div>
    </div>
</div>